---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout title="Contato">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contato</Fragment>
      <Fragment slot="desc">Estamos aqui para ajudar.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Fale conosco</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
         Tem algo a dizer? Estamos aqui para ajudar. Ligue ou envie um Whatsapp para nossa equipe.
        </p>
        <div class="mt-5">
      <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+5581997187441">+55 (81)9.9718-7441</a
            >
          </div>
        </div>
      </div>    
    </div>
  </Container>
</Layout>
